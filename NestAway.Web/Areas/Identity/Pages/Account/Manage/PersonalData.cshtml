@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>Your account contains personal data that you have provided to us. This page allows you to download or delete this data.</p>
        <p>
            <strong>The deletion of your data as well as your account is final, and it cannot be recovered.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group" style="display: inline-block">
            <button class="btn btn-primary" type="submit">Download</button>
        </form>
            
        <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Delete</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
