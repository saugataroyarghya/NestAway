@model NestAway.Web.Models.Offer

@{
    ViewData["Title"] = "Delete an Offer";
}


<div class="card main-card">
    <div class="card-header">
        <h3>Offer Deletion</h3>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Accommodation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Accommodation.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AddingDateTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AddingDateTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StartAvailability)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartAvailability)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EndAvailability)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EndAvailability)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PricePerNight)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PricePerNight)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CleaningFee)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CleaningFee)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back to the List</a>
            </div>
        </form>

    </div>
</div>